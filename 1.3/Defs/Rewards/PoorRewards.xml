<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <VSEWW.RewardDef>
    <defName>VSEWW_PoorPawnJoins</defName>
    <label>Pawn joins</label>
    <description>A single pawn worth up to 100 Combat points joins the colony</description>
    <category>Poor</category>
    <randomPawns>
      <li>
        <maxCombatPower>50</maxCombatPower>
        <count>1</count>
      </li>
    </randomPawns>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_WoodDrop</defName>
    <label>Wood drop</label>
    <description>Cargo pods drop 250 wood</description>
    <category>Poor</category>
    <items>
      <li>
        <thing>WoodLog</thing>
        <count>250</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_SteelDrop</defName>
    <label>Steel drop</label>
    <description>Cargo pods drop 250 steel</description>
    <category>Poor</category>
    <items>
      <li>
        <thing>Steel</thing>
        <count>250</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_StoneDrop</defName>
    <label>Stone drop</label>
    <description>Cargo pods drop 250 stone blocks</description>
    <category>Poor</category>
    <randomItems>
      <li>
        <thingCategories>
          <li>StoneBlocks</li>
        </thingCategories>
        <count>250</count>
      </li>
    </randomItems>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_FoodDrop</defName>
    <label>Food drop</label>
    <description>Cargo pods drop 30 survival meals</description>
    <category>Poor</category>
    <items>
      <li>
        <thing>MealSurvivalPack</thing>
        <count>30</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_MedicineDrop</defName>
    <label>Medicine drop</label>
    <description>Cargo pods drop 30 medicine</description>
    <category>Poor</category>
    <items>
      <li>
        <thing>MedicineIndustrial</thing>
        <count>30</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_PoorFuelDrop</defName>
    <label>Fuel drop</label>
    <description>Cargo pods drop 200 chemfue</description>
    <category>Poor</category>
    <items>
      <li>
        <thing>Chemfuel</thing>
        <count>200</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_PoorWeaponsDrop</defName>
    <label>Poor weapons drop</label>
    <description>Cargo pods 3 random weapons, maximum quality is poor</description>
    <category>Poor</category>
    <randomItems>
      <li>
        <thingCategories>
          <li>Weapons</li>
        </thingCategories>
        <excludeThingCategories>
          <li MayRequire="CETeam.CombatExtended">Ammo</li>
        </excludeThingCategories>
        <quality>Poor</quality>
        <count>3</count>
      </li>
    </randomItems>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_PoorCashDrop</defName>
    <label>Cash</label>
    <description>Cargo pods drop 1000 silver</description>
    <category>Poor</category>
    <items>
      <li>
        <thing>Silver</thing>
        <count>1000</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RPawnRewardDef>
    <defName>VSEWW_PoorAnimalDrop</defName>
    <label>Animal drop</label>
    <description>Cargo pod drops a random, tamed animal</description>
    <category>Poor</category>
    <randomPawns>
      <li>
        <intelligence>Animal</intelligence>
        <count>1</count>
      </li>
    </randomPawns>
  </VSEWW.RPawnRewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_LeatherDrop</defName>
    <label>Leather drop</label>
    <description>Cargo pod drops 300 random pieces of leather</description>
    <category>Poor</category>
    <randomItems>
      <li>
        <thingCategories>
          <li>Leathers</li>
        </thingCategories>
        <count>300</count>
      </li>
    </randomItems>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_RandomNormalDrop</defName>
    <label>Random normal reward</label>
    <description>Instead of picking up a specific Poor-level reward, obtain a completely random Normal-level reward</description>
    <category>Poor</category>
    <sendRewardOf>Normal</sendRewardOf>
  </VSEWW.RewardDef>
</Defs>