<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <VSEWW.RewardDef>
    <defName>VSEWW_GoodPawnJoins</defName>
    <label>Pawns join</label>
    <description>A group of 3 pawns worth a minimum 100 Combat points joins the colony</description>
    <category>Good</category>
    <randomPawns>
      <li>
        <minCombatPower>100</minCombatPower>
        <count>3</count>
      </li>
    </randomPawns>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_GoodResourceDrop</defName>
    <label>Resource drop</label>
    <description>Cargo pods drop 500 wood, 500 steel, 30 components and 200 plasteel</description>
    <category>Good</category>
    <items>
      <li>
        <thing>WoodLog</thing>
        <count>500</count>
      </li>
      <li>
        <thing>Steel</thing>
        <count>500</count>
      </li>
      <li>
        <thing>Plasteel</thing>
        <count>200</count>
      </li>
      <li>
        <thing>ComponentIndustrial</thing>
        <count>30</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_GoodComponentDrop</defName>
    <label>Components drop</label>
    <description>Cargo pods drop 60 components, 15 advanced components</description>
    <category>Good</category>
    <items>
      <li>
        <thing>ComponentIndustrial</thing>
        <count>60</count>
      </li>
      <li>
        <thing>ComponentSpacer</thing>
        <count>15</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_GoodFoodAndMedicineDrop</defName>
    <label>Food and medicine drop</label>
    <description>Cargo pods drop 100 survival meals and 100 medicine</description>
    <category>Good</category>
    <items>
      <li>
        <thing>MealSurvivalPack</thing>
        <count>100</count>
      </li>
      <li>
        <thing>MedicineIndustrial</thing>
        <count>100</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_GoodFuelDrop</defName>
    <label>Fuel drop</label>
    <description>Cargo pods drop 800 chemfuel, 800 wood and 250 uranium</description>
    <category>Good</category>
    <items>
      <li>
        <thing>Chemfuel</thing>
        <count>800</count>
      </li>
      <li>
        <thing>WoodLog</thing>
        <count>800</count>
      </li>
      <li>
        <thing>Uranium</thing>
        <count>250</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_GoodWeaponsDrop</defName>
    <label>Good weapons drop</label>
    <description>Cargo pods 3 random weapons, quality is Good</description>
    <category>Good</category>
    <randomItems>
      <li>
        <thingCategories>
          <li>Weapons</li>
        </thingCategories>
        <excludeThingCategories>
          <li MayRequire="CETeam.CombatExtended">Ammo</li>
        </excludeThingCategories>
        <quality>Good</quality>
        <count>3</count>
      </li>
    </randomItems>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_GoodArmorDrop</defName>
    <label>Good armor drop</label>
    <description>Cargo pods 3 random pieces of armor, quality is Good</description>
    <category>Good</category>
    <randomItems>
      <li>
        <thingCategories>
          <li>ApparelArmor</li>
        </thingCategories>
        <quality>Good</quality>
        <count>3</count>
      </li>
    </randomItems>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_GoodCashDrop</defName>
    <label>Cash</label>
    <description>Cargo pods drop 5000 silver, 250 gold</description>
    <category>Good</category>
    <items>
      <li>
        <thing>Silver</thing>
        <count>5000</count>
      </li>
      <li>
        <thing>Gold</thing>
        <count>250</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_DelayBy7</defName>
    <label>Delay next wave</label>
    <description>Next wave is delayed by 7 days</description>
    <category>Good</category>
    <waveModifier>
      <delayBy>7</delayBy>
    </waveModifier>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_CombatAnimalDrop</defName>
    <label>Combat Animal drop</label>
    <description>Cargo pod drops 5 random, tamed combat animals</description>
    <category>Good</category>
    <randomPawns>
      <li>
        <tradeTag>AnimalFighter</tradeTag>
        <intelligence>Animal</intelligence>
        <count>5</count>
      </li>
    </randomPawns>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_GoodTextileDrop</defName>
    <label>Textile drop</label>
    <description>Cargo pod drops 1000 random pieces of leather or textile</description>
    <category>Good</category>
    <randomItems>
      <li>
        <thingCategories>
          <li>Leathers</li>
          <li>Textiles</li>
        </thingCategories>
        <count>1000</count>
      </li>
    </randomItems>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_GoodSkillBoost</defName>
    <label>Skill boost</label>
    <description>Improve every skill of every pawn under your control by 2</description>
    <category>Good</category>
    <boostSkillBy>2</boostSkillBy>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_GoodReseachBoost</defName>
    <label>Research boost</label>
    <description>Instantly research 5 random research projects you meet prerequisites for</description>
    <category>Good</category>
    <unlockXResearch>5</unlockXResearch>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_Weaken50</defName>
    <label>Weaken next wave</label>
    <description>Next wave only has 50% Combat points it would normally have</description>
    <category>Good</category>
    <waveModifier>
      <weakenBy>0.5</weakenBy>
    </waveModifier>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_Allies</defName>
    <label>Allies!</label>
    <description>Next wave also brings allies that are 2x the regular size, to help you</description>
    <category>Good</category>
    <waveModifier>
      <allies>true</allies>
    </waveModifier>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_GoodArchotechArtifactsDrop</defName>
    <label>Archotech artifacts drop</label>
    <description>Receive 5 random archotech items (can be minified structures)</description>
    <category>Good</category>
    <randomItems>
      <li>
        <thingCategories>
          <li>Artifacts</li>
        </thingCategories>
        <count>5</count>
      </li>
    </randomItems>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_OrbitalTargeterPowerBeamDrop</defName>
    <label>Orbital beam targeter</label>
    <description>Receive an orbital beam targeter</description>
    <category>Good</category>
    <items>
      <li>
        <thing>OrbitalTargeterPowerBeam</thing>
        <count>1</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_OrbitalTargeterBombardmentDrop</defName>
    <label>Orbital bombardment targeter</label>
    <description>Receive an orbital bombardment targeter</description>
    <category>Good</category>
    <items>
      <li>
        <thing>OrbitalTargeterBombardment</thing>
        <count>1</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_TornadoGeneratorDrop</defName>
    <label>Tornado generator</label>
    <description>Receive a tornado generator</description>
    <category>Good</category>
    <items>
      <li>
        <thing>TornadoGenerator</thing>
        <count>1</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_GoodDrugsDrop</defName>
    <label>Drugs drop</label>
    <description>Receive 10 Ambrosia, 10 psychite tea, 20 beer, 20 smokeleaf joints, 20 flake, 20 yayo, 20 wake-up, 20 go juice</description>
    <category>Good</category>
    <items>
      <li>
        <thing>Ambrosia</thing>
        <count>20</count>
      </li>
      <li>
        <thing>PsychiteTea</thing>
        <count>20</count>
      </li>
      <li>
        <thing>Beer</thing>
        <count>20</count>
      </li>
      <li>
        <thing>SmokeleafJoint</thing>
        <count>20</count>
      </li>
      <li>
        <thing>Flake</thing>
        <count>20</count>
      </li>
      <li>
        <thing>Yayo</thing>
        <count>20</count>
      </li>
      <li>
        <thing>WakeUp</thing>
        <count>20</count>
      </li>
      <li>
        <thing>GoJuice</thing>
        <count>20</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_GoodProstheticsDrop</defName>
    <label>Prosthetics drop</label>
    <description>Cargo pod drops 5 random low-level prosthetics and 5 bionic prosthetics</description>
    <category>Good</category>
    <randomItems>
      <li>
        <thingCategories>
          <li>BodyPartsProsthetic</li>
        </thingCategories>
        <count>5</count>
      </li>
      <li>
        <thingCategories>
          <li>BodyPartsBionic</li>
        </thingCategories>
        <count>5</count>
      </li>
    </randomItems>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_RandomExcellentDrop</defName>
    <label>Random Excellent reward</label>
    <description>Instead of picking up a specific Good-level reward, obtain a completely random Excellent-level reward</description>
    <category>Good</category>
    <sendRewardOf>Excellent</sendRewardOf>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_OrbitalTraderArrival</defName>
    <label>Orbital Trader Arrival</label>
    <description>Send a random orbital trader</description>
    <category>Good</category>
    <incidentDef>OrbitalTraderArrival</incidentDef>
  </VSEWW.RewardDef>
</Defs>